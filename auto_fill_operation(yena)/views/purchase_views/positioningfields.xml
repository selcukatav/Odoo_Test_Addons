<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherit_required" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.positioning.yena</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="x_contact_id"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="user_id" required="1"/>
                    <field name="incoterm_id" required="1"/>
                    <field name="payment_term_id"/>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="before">
                    <field name="x_order_date"/>
                    <field name="x_rfq_sent_date"/>
                    <field name="x_required_delivery_date"/>
                    <field name="x_project_purchase"/>
                    <field name="x_customer_ref" required="1"/>
                    <field name="x_tags" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
